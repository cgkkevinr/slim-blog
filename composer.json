{
    "name": "cgkkevinr/slim-blog",
    "description": "A blog created using the Slim PHP micro framework.",
    "keywords": ["slim", "blog"],
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin R.",
            "role": "Creator / Main Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "slim/slim": "^3.12",
        "monolog/monolog": "^1.24",
        "twig/twig": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    }
}
